<% content_for :head do %>
  <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script> 

  <%= javascript_include_tag 'highcharts' %>

  <link rel="stylesheet" type="text/css" href="http://yui.yahooapis.com/2.9.0/build/datatable/assets/skins/sam/datatable.css" /> 
  <script type="text/javascript" src="http://yui.yahooapis.com/2.9.0/build/json/json-min.js"></script> 
  <script type="text/javascript" src="http://yui.yahooapis.com/2.9.0/build/element/element-min.js"></script> 
  <script type="text/javascript" src="http://yui.yahooapis.com/2.9.0/build/datasource/datasource-min.js"></script> 
  <script type="text/javascript" src="http://yui.yahooapis.com/2.9.0/build/event-delegate/event-delegate-min.js"></script> 
  <script type="text/javascript" src="http://yui.yahooapis.com/2.9.0/build/datatable/datatable-min.js"></script>
<% end %>

<% content_for :page_header do %>
  <h2 class="page-title">
    Convict Court Locations
  </h2>
<% end %>

<div id="court-counties-page-container">

  <div id="top-conviction-container" class="widget">
    <h3 class="widget-section-title widget-title-graph-icon">Top Conviction Locations</h3>
    <div id="top-conviction-chart">Loading ...</div>
  </div>

  <script>
$(document).ready(function() {
   new Highcharts.Chart({
      chart: {
         renderTo: 'top-conviction-chart',
         defaultSeriesType: 'bar',
         height: 470
      },
      title: {
         text: null
      },
      credits: {
        enabled: false
      },    
      xAxis: {
         categories: <%= raw @top_counties.collect { |m| m[:court_county] }.to_json %>,
         title: {
            text: 'Counties'
         }
      },
      yAxis: {
         min: 0,
         title: {
            text: 'Convicts',
            align: 'high'
         },
        endOnTick: false
      },
      tooltip: {
         formatter: function() {
            return ''+
                this.series.name +': ' + Highcharts.numberFormat(this.y, 0, ',') + ' convicts';
         }
      },
      plotOptions: {
         bar: {
         }
      },
      legend: {
         layout: 'vertical',
         align: 'right',
         verticalAlign: 'top',
         x: -10,
         y: 370,
         floating: true,
         borderWidth: 1,
         backgroundColor: '#FFFFFF',
         shadow: true
      },
      series: [{
         name: 'Convicts',
         data: <%= raw @top_counties.collect { |m| m[:convicts].to_i }.to_json %>
      }]
   });
   
   
});
</script>

  <%= render :partial => 'conviction_locations_map' %>

  <div id="courty-table-container" class="widget">
    <h3 class="widget-section-title widget-title-table-icon">Browse By Conviction County</h3>
    <p id="county-data-quality"><strong>Note:</strong> Counties of conviction have been determined based on each convict's court of conviction.
    This is far from fool proof, and some locations (e.g. Ireland) have disproportionately low stats.</p>
    <div id="data-table">Loading ...</div>
  </div>

  <script>
    YAHOO.util.Event.addListener(window, "load", function() {
            var tableData = <%= raw @counties.to_json %>;

            var columnDefs = [
                {key:"court_county", label: "Court Counties", sortable:true, resizeable:true},
                {key:"convicts", label: "Convicts", formatter: "number", sortable:true, resizeable:true}
            ];
     
            var tableDS = new YAHOO.util.DataSource(tableData);
            tableDS.responseType = YAHOO.util.DataSource.TYPE_JSARRAY;
            tableDS.responseSchema = {
                fields: ["court_county", "convicts"]
            };

            var dataTable = new YAHOO.widget.DataTable("data-table",
              columnDefs, tableDS, {sortedBy : {key:"court_county", dir: 'desc'}});

            //Hightlight row on mouse hover
            dataTable.subscribe("rowMouseoverEvent", dataTable.onEventHighlightRow);
            dataTable.subscribe("rowMouseoutEvent", dataTable.onEventUnhighlightRow);

            //Handle user clicking on a row
            dataTable.subscribe("rowClickEvent", function(oArgs){
              var elTarget = oArgs.target;
              var oRecord = this.getRecord(elTarget);
              window.location.href = '/convicts/?court_county=' + oRecord.getData("court_county");
            }); 

            return {
                oDS: tableDS,
                oDT: dataTable
            };
    });
  </script>

</div>
