        <div class="row">
          <div id="logo" class="one-of-two">
              <a href="/" title="Home"><img src="/images/logo.png" alt="ConViz" height="90" width="480"></a>
          </div> <!-- #logo .one-of-two -->
          
          <div id="rotator">
              <%= form_tag(convicts_path, :method => "get", :id => 'convict-search-form') do %>
                <%= label_tag "q", "Convict Search:" %> 
                <input type="search" name="q" value="<%= params[:q] %>" id="convict-search-field"/>
                <%= submit_tag "Search", :class => "action-button" %>
              <% end %>
          </div> <!-- #rotator .two-of-two -->
        </div> <!-- .row -->
